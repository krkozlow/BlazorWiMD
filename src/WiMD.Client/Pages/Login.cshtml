@page "/Login"
@inject HttpClient Http

<form>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="inputEmail1" aria-describedby="emailHelp" placeholder="Enter email" bind="@user.Email" />
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="inputPassword" placeholder="Password" bind="@user.Password" />
    </div>
    <button type="button" class="btn btn-primary" onclick="@(async () => await Submit())">Submit</button>
    @*<button type="button" class="btn btn-primary" onclick="@(() => onClickHandle())">Submit</button>*@
</form>

<SurveyPrompt Title="How is Blazor working for you?" />

@functions {

    class User
    {
        public string Password { get; set; }
        public string Email { get; set; }
        public string Token { get; set; }
    }

    User user = new User();

    private void onClickHandle()
    {
        Console.WriteLine("onClick handle");
    }

    private async Task Submit()
    {
        var result = await Http.PostJsonAsync<User>("http://localhost:64827/api/Authentication", user);
        Console.WriteLine(result.Token);
    }
}